{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitUseStrict": false,
    "outDir": "dist/",
    "baseUrl": "${workspaceFolder}/src/app.ts",
    "listFiles": false,
    "noEmitHelpers": false,
    "noImplicitReturns": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": false,
    "sourceMap": true
  },

  "include": ["src/**/**/**/*"],
  "exclude": ["node_modules", "dist"],
  "compileOnSave": false
}
